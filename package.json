{
  "name": "give-green-live-clean",
  "version": "1.0.0",
  "description": "Environmental donation website with YAML configuration management",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:properties": "jest --testPathPattern=properties",
    "lint": "eslint backend frontend/js --ext .js",
    "lint:fix": "eslint backend frontend/js --ext .js --fix",
    "format": "prettier --write \"**/*.{js,json,yml,yaml,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,yml,yaml,md}\"",
    "build": "npm run lint && npm run test:unit",
    "test:unit": "jest backend/config/configManager.test.js backend/server.test.js",
    "docker:build": "docker build -t give-green-live-clean .",
    "docker:run": "docker compose up",
    "docker:dev": "docker compose --profile dev up",
    "docker:stop": "docker compose down"
  },
  "keywords": [
    "donation",
    "environment",
    "paypal",
    "yaml-config",
    "responsive-design"
  ],
  "author": "Give Green Live Clean Team",
  "license": "MIT",
  "dependencies": {
    "chokidar": "^3.5.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "js-yaml": "^4.1.0",
    "morgan": "^1.10.0",
    "nodemailer": "^6.10.1"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "jsdom": "^27.3.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.1.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "backend/**/*.js",
      "frontend/js/**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(parse5)/)"
    ]
  }
}
